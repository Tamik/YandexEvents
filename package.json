{
    "name": "ru.yamblz.events",
    "displayName": "Яндекс.События",
    "version": "0.0.1",
    "description": "Приложение-агрегатор событий для проекта Мобилизация",
    "main": "index.js",
    "scripts": {
        "dev": "npm run clear && npm run copy:html && NODE_ENV=development webpack-dev-server --config ./configs/webpack/develop.config.js",
        "prod": "npm run clear && NODE_ENV=production webpack --config ./configs/webpack/production.config.js",
        "copy:html": "cp ./src/index.dev.html ./www/index.html",
        "ios": "cordova run ios",
        "ios:device": "cordova run ios --target device",
        "android": "cordova run android",
        "android:device": "cordova run android --target device",
        "browser": "cordova run browser --target Chrome",
        "test": "jest",
        "clear": "rm -rf ./www/assets",
        "lint:fix": "eslint --fix"
    },
    "author": "Yandex.Events Team",
    "license": "Apache-2.0",
    "dependencies": {
        "axios": "^0.16.2",
        "cordova-android": "~6.2.3",
        "cordova-browser": "^4.1.0",
        "cordova-ios": "~4.4.0",
        "cordova-plugin-geolocation": "^2.4.3",
        "cordova-plugin-whitelist": "^1.3.2",
        "localforage": "^1.5.0",
        "react": "^15.6.1",
        "react-dom": "^15.6.1",
        "react-redux": "^5.0.6",
        "react-router-dom": "^4.2.2",
        "react-router-page-transition": "^3.0.2",
        "react-slick": "^0.15.0",
        "redux": "^3.7.2",
        "redux-thunk": "^2.2.0",
        "yandex-appmetrica-plugin-cordova": "git+https://github.com/Tamik/metrica-plugin-cordova.git"
    },
    "cordova": {
        "plugins": {
            "cordova-plugin-whitelist": {},
            "cordova-plugin-geolocation": {},
            "yandex-appmetrica-plugin-cordova": {}
        },
        "platforms": [
            "android",
            "browser",
            "ios"
        ]
    },
    "devDependencies": {
        "babel": "^6.23.0",
        "babel-cli": "^6.26.0",
        "babel-core": "^6.26.0",
        "babel-eslint": "^7.2.3",
        "babel-jest": "^20.0.3",
        "babel-loader": "^7.1.2",
        "babel-preset-es2015": "^6.24.1",
        "babel-preset-react": "^6.24.1",
        "babel-preset-stage-2": "^6.24.1",
        "babel-preset-stage-3": "^6.24.1",
        "babel-register": "^6.26.0",
        "css-loader": "^0.28.5",
        "enzyme": "^2.9.1",
        "eslint": "^4.5.0",
        "eslint-config-airbnb": "^15.1.0",
        "eslint-plugin-import": "^2.7.0",
        "eslint-plugin-jsx-a11y": "^6.0.2",
        "eslint-plugin-react": "^7.3.0",
        "file-loader": "^0.11.2",
        "html-webpack-plugin": "^2.30.1",
        "jest": "^20.0.4",
        "node-sass": "^4.5.3",
        "prop-types": "^15.5.10",
        "react-addons-test-utils": "^15.6.0",
        "react-hot-loader": "^3.0.0-beta.7",
        "react-test-renderer": "^15.6.1",
        "redux-devtools-extension": "^2.13.2",
        "sass-loader": "^6.0.6",
        "style-loader": "^0.18.2",
        "webpack": "^3.5.5",
        "webpack-dev-server": "^2.7.1",
        "webpack-dotenv-plugin": "^2.0.2"
    }
}
